---
import dataHome from '../../config/dataHome.json'
---

<section class="home__section active" id="home">
    <article class="home__article home__article--leng">
        <h6 class="home__leng-h6">Idiomas</h6>
        <div class="home__div home__div--leng">
            <input type="checkbox" class="home__input home__input--leng" id="home__label">
            <label for="home__label" class="home__label--lbl">
                <img src="/Astro-Portafolio/icons/us.webp" class="label__img label__img-us"></img>
                <img src="/Astro-Portafolio/icons/es.webp" class="label__img label__img-es"></img>
            </label>
        </div>
    </article>

    {
        dataHome.map(data =>(
        <article class="home__article home__article--content">
            <div class="home__div home__div--txt">
                <h2 class="home__h2"><span class="home__span global__span">{data.span}</span><br>{data.title}</h2>
                <div class="home__div home__div--h3">
                    <h3 class="home__h3">{data.subtitle}</h3>
                </div>
                <p class="home__p">{data.description}<br>{data.subdescription}</p>
            </div>
            <div class="home__div home__div--img">
                <img src={data['image-url']} alt="Primera foto de perfil." class="home__img home__img--user">
            </div>
        </article>
        ))
    }

    <article class="home__article global__btn--box btn__box">
        <button class="home__dcv global__btn" id="home__dcv">Descargar CV</button>
        <button class="home__lt global__btn" id="home__lt">Hablemos</button>
    </article>

    <article class="home__article home__article--rrss">
            <a href="https://github.com/Lombardimn" class="home__a" target="_blank"><img src="/Astro-Portafolio/icons/github-loop.svg" alt="" class="home__i"></a>
            <a href="mailto:example.test@example.com" class="home__a" target="_blank"><img src="/Astro-Portafolio/icons/gmail.svg" alt="" class="home__i"></a>
            <a href="https://linkedin.com/in/mnlombardi" class="home__a" target="_blank"><img src="/Astro-Portafolio/icons/linkedin.svg" alt="" class="home__i"></a>
    </article>
</section>